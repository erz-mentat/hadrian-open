{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "HADRIAN Event",
  "description": "A validated citizen-report event produced by the HADRIAN pipeline.",
  "version": "1",
  "type": "object",
  "required": ["id", "category", "severity", "confidence", "raw_text", "normalized_text", "tags"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique event identifier."
    },
    "category": {
      "type": "string",
      "enum": ["A", "B", "C", "D", "E"],
      "description": "A=Traffic/Accident, B=Medical, C=Weather/Infrastructure, D=Assembly/Demo, E=Violence/Vandalism"
    },
    "severity": {
      "type": "integer",
      "minimum": 1,
      "maximum": 5,
      "description": "How serious is the event? (content-based, independent of confidence)"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "How sure are we the report is accurate? (epistemic, never mixed with severity)"
    },
    "when_iso": {
      "type": ["string", "null"],
      "description": "ISO 8601 timestamp. Null if unknown."
    },
    "where_text": {
      "type": ["string", "null"],
      "description": "Raw location string from the report."
    },
    "lat": { "type": ["number", "null"] },
    "lon": { "type": ["number", "null"] },
    "location_uncertainty_m": {
      "type": ["number", "null"],
      "description": "Estimated location uncertainty radius in meters."
    },
    "cluster_id": {
      "type": ["string", "null"],
      "description": "If this event was merged into an existing cluster, the cluster ID."
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" }
    },
    "raw_text": { "type": "string" },
    "normalized_text": { "type": "string" },
    "explanation": {
      "type": "array",
      "description": "Audit trail â€” why each decision was made.",
      "items": {
        "type": "object",
        "required": ["step", "reason"],
        "properties": {
          "step": { "type": "string" },
          "reason": { "type": "string" }
        }
      }
    }
  }
}
